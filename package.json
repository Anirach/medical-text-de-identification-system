{
  "name": "medical-text-de-identification-system",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm run start:prod",
    "prisma:generate": "cd backend && npm run prisma:generate",
    "prisma:migrate": "cd backend && npm run prisma:migrate",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "vercel-install": "cd backend && npm install && npx prisma generate && cd ../frontend && npm install",
    "vercel-build": "cd frontend && npm run build"
  },
  "devDependencies": {
    "@vercel/node": "^5.5.13",
    "concurrently": "^9.1.2"
  }
}
