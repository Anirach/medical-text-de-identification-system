{
  "version": 2,
  "installCommand": "npm install && cd backend && npm install && npx prisma generate && cd ../frontend && npm install",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.ts": {
      "includeFiles": "backend/**"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api" },
    { "source": "/auth/:path*", "destination": "/api" },
    { "source": "/process", "destination": "/api" },
    { "source": "/process-with-llm", "destination": "/api" },
    { "source": "/validate-entities", "destination": "/api" },
    { "source": "/mask-keywords", "destination": "/api" },
    { "source": "/mask-keywords/:path*", "destination": "/api" }
  ]
}

