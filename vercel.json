{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "status": 204
    },
    {
      "src": "/auth/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/process(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/process-with-llm",
      "dest": "/api/index.ts"
    },
    {
      "src": "/validate-entities",
      "dest": "/api/index.ts"
    },
    {
      "src": "/mask-keywords(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
