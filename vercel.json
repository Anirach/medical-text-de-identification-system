{
  "version": 2,
  "installCommand": "npm install --prefix backend && npm install --prefix frontend && npm --prefix backend run prisma:generate",
  "buildCommand": "npm --prefix frontend run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.ts": {
      "includeFiles": "backend/**"
    }
  },
  "rewrites": [
    { "source": "/auth/:path*", "destination": "/api" },
    { "source": "/process", "destination": "/api" },
    { "source": "/process-with-llm", "destination": "/api" },
    { "source": "/validate-entities", "destination": "/api" },
    { "source": "/mask-keywords/:path*", "destination": "/api" }
  ]
}
